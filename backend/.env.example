# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/url-shortener

# Application Configuration
BASE_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Short Code Configuration
SHORT_CODE_LENGTH=6

# Rate Limiting Configuration
# Enable/disable rate limiting (true/false)
RATE_LIMIT_ENABLED=true
# Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Maximum requests per window per IP (default: 10, set to 0 to disable)
RATE_LIMIT_MAX_REQUESTS=10

# Admin Authentication (required for analytics endpoints)
# Username for HTTP Basic Auth
ADMIN_USERNAME=admin
# Password for HTTP Basic Auth (change this in production!)
ADMIN_PASSWORD=your-secure-password-here

# Analytics Configuration
# Number of days to retain detailed click events (default: 90)
ANALYTICS_RETENTION_DAYS=90
